    <changeSet context="bootstrap" author="ole" id="OLE_KRCR_PARM_T">
        <update tableName="KRCR_PARM_T">
            <column name="VAL" value="PO + 0 $" />
            <where>PARM_NM = 'REENCUMBER_RECURRING_ORDERS'</where>
        </update>
    </changeSet>


    <bean id="RefreshButton" parent="Uif-SecondaryActionButton-Small" p:style="float:left;margin-left:0em"
          p:actionLabel="Refresh">
        <property name="toolTip">
            <bean parent="Uif-Tooltip">
                <property name="tooltipContent"
                          value='Reload the bibs in the tree with the latest info about the holdings and items'/>
                <property name="templateOptions">
                    <map merge="true">
                        <entry key="selectable" value="true"/>
                    </map>
                </property>
            </bean>
        </property>
    </bean>

    <bean id="RemoveButton" parent="Uif-SecondaryActionButton-Small" p:style="float:left;margin-left:0em"
          p:actionLabel="Remove">
        <property name="toolTip">
            <bean parent="Uif-Tooltip">
                <property name="tooltipContent"
                          value='Remove selected bibs from the tree'/>
                <property name="templateOptions">
                    <map merge="true">
                        <entry key="selectable" value="true"/>
                    </map>
                </property>
            </bean>
        </property>
    </bean>

    <bean id="UnselectAllButton" parent="Uif-SecondaryActionButton-Small" p:style="float:left;margin-left:0em"
          p:actionLabel="Unselect All">
        <property name="toolTip">
            <bean parent="Uif-Tooltip">
                <property name="tooltipContent"
                          value='Unselect all nodes in the tree'/>
                <property name="templateOptions">
                    <map merge="true">
                        <entry key="selectable" value="true"/>
                    </map>
                </property>
            </bean>
        </property>
    </bean>
    <bean id="BoundwithSearchResultsSelectPanel"  parent="Uif-HorizontalBoxSection">
        <property name="items">
            <list>
                <bean id="search_button1" parent="Uif-SecondaryActionButton" p:style="float:left;margin-left:25em" p:methodToCall="copyToTree" p:actionLabel="Copy To Tree1" p:actionParameters="treeId:leftTree" p:refreshId="BoundwithSelectionSection" p:successCallback="searching()"/>
                <bean id="search_button2" parent="Uif-SecondaryActionButton" p:style="float:left;margin-left:0em" p:methodToCall="copyToTree" p:actionLabel="Copy To Tree2" p:actionParameters="treeId:rightTree" p:refreshId="BoundwithSelectionSection" p:successCallback="searching()"/>
                <bean id="search_button3" parent="Uif-SecondaryActionButton" p:style="float:left;margin-left:0em" p:methodToCall="unSelectAll" p:actionLabel="Unselect All" p:refreshId="BibSearchResults" p:successCallback="searching()"/>
            </list>
        </property>
    </bean>

    <bean id="ClearTreeButton" parent="Uif-SecondaryActionButton-Small" p:style="float:left;margin-left:0em"
          p:actionLabel="Clear Tree">
        <property name="toolTip">
            <bean parent="Uif-Tooltip">
                <property name="tooltipContent"

    <bean id="Boundwith-deleteConfirmationButtons" parent="Uif-FooterBase" p:render="@{inDelete eq 'true'}">
        <property name="items">
            <list>
                <bean id="deleteVerify" parent="Uif-SecondaryActionButton" p:actionScript="showDeleteTabs('delete');"

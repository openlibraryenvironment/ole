<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">


    <!--OleGenericDialogs-->
    <bean id="renewLostItemsDialog" parent="Uif-DialogGroup">
        <property name="promptText" value="Item status is 'LOST', Do you want to renew the item?"/>
        <property name="headerText" value=""/>
        <property name="availableResponses">
            <list>
                <!--Empty-->
            </list>
        </property>
        <property name="items">
            <list merge="false">
                <ref bean="renewOptionButtonnLayoutSection"/>
            </list>
        </property>
    </bean>

    <bean id="renewOptionButtonnLayoutSection" parent="Uif-HorizontalBoxSection">
        <property name="items">
            <list>
                <bean id="renewOptionsProceed" parent="Uif-SecondaryActionButton" p:actionLabel="Proceed" p:style="width:80px"
                      p:actionScript="
                      jq.fancybox.close();
                      submitForm('continueRenew',null,null,null,null);
                      "/>
                <bean id="renewOptionsDoNotProceed" parent="Uif-SecondaryActionButton" p:actionLabel="Do Not Proceed"
                      p:style="width:120px"
                      p:methodToCall="resetItemForNextTrans" p:ajaxSubmit="true" p:successCallback="
                      jq.fancybox.close();
                      jq('#checkoutItem_control').focus();
                      jq('.loanedItemCBClass').removeAttr('checked');
                      jq('.loaningItemCBClass').removeAttr('checked');"/>
            </list>
        </property>
    </bean>

</beans>
      <label>EraTrackingNumberSearchAttribute</label>
      <description>EraTrackingNumberSearchAttribute</description>
      <type>SearchableXmlAttribute</type>
      <searchingConfig>
        <fieldDef name="trackingNumber" title="Tracking Number">
          <display>

        xmlns:c="ns:workflow/common"
        xmlns:rt="ns:workflow/RuleTemplate"
        targetNamespace="ns:workflow/RuleTemplate"
        attributeFormDefault="unqualified"
        elementFormDefault="qualified">

  <annotation>
    <documentation>
